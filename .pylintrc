[MESSAGES CONTROL]
disable=
    too-few-public-methods,
    too-many-branches,
    no-else-return,
    line-too-long

[FORMAT]
max-line-length=100

[MASTER]
# Ensures Pylint sees the current directory as part of PYTHONPATH
init-hook="import sys; sys.path.append('.')"

[REPORTS]
# Disable the detailed report at the end
reports=no
